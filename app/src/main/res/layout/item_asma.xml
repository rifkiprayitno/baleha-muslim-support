<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:id="@+id/tv_number"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ar Rahmaann"
        android:id="@+id/tv_transliteration"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/tv_number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="======"
        android:id="@+id/tv_name"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Beneficient"
        android:id="@+id/tv_meaning"
        android:layout_below="@+id/tv_transliteration"
        android:layout_alignStart="@+id/tv_transliteration"/>

    <View
        style="@style/Divider"
        android:layout_below="@+id/tv_meaning"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>